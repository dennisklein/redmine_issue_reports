<% unless @issues_due.empty? -%>
<p><%= l(:mail_body_issue_report_due, :count => @issues_due.size, :days => @days) %></p>
<ul>
<% @issues_due.each do |issue| -%>
  <li><%= l(:mail_body_issue_report_due_in, :days => (issue.due_date - @today).to_i) %> [<%=link_to(h(issue.project), :controller => 'issues', :action => 'index', :project_id => issue.project, :only_path => false) %>] <%=link_to(h("#{issue.tracker} ##{issue.id}"), :controller => 'issues', :action => 'show', :id => issue, :only_path => false)%>: <%=h issue.subject %></li>
<% end -%>
</ul>
<% end -%>

<% unless @issues_without_due_date.empty? -%>
<p><%= l(:mail_body_issue_report_without_due_date, :count => @issues_without_due_date.size) %></p>
<ul>
<% @issues_without_due_date.each do |issue| -%>
  <li>[<%=link_to(h(issue.project), :controller => 'issues', :action => 'index', :project_id => issue.project, :only_path => false) %>] <%=link_to(h("#{issue.tracker} ##{issue.id}"), :controller => 'issues', :action => 'show', :id => issue, :only_path => false)%>: <%=h issue.subject %></li>
<% end -%>
</ul>
<% end -%>

<% unless @issues_inactive.empty? -%>
<p><%= l(:mail_body_issue_report_inactive, :count => @issues_inactive.size, :days => @inactive_days) %></p>
<ul>
<% @issues_inactive.each do |issue| -%>
  <li><%= l(:mail_body_issue_report_inactive_for, :days => ((@now - issue.updated_on) / 3600 / 24).to_i) %> [<%=link_to(h(issue.project), :controller => 'issues', :action => 'index', :project_id => issue.project, :only_path => false) %>] <%=link_to(h("#{issue.tracker} ##{issue.id}"), :controller => 'issues', :action => 'show', :id => issue, :only_path => false)%>: <%=h issue.subject %></li>
<% end -%>
</ul>
<% end -%>

<p><%= link_to l(:mail_body_issue_report_view_all_assigned_issues), @issues_url %></p>
